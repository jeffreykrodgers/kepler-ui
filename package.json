{
    "name": "@sregdorffej/kepler-ui",
    "version": "0.2.3",
    "description": "Sci-Fi inspired web component ui kit",
    "type": "module",
    "files": [
        "styles",
        "assets",
        "kepler-ui.js",
        "package.json"
    ],
    "main": "kepler-ui.js",
    "module": "kepler-ui.js",
    "scripts": {
        "build": "rollup -c && node prep-package.js",
        "build:test": "rollup -c rollup.config.playground.js",
        "watch": "rollup -c -w",
        "watch:test:copy:html": "chokidar \"playground/**/*.html\" -c \"npx cpy-cli \"playground/**/*.html\" pub --flat\"",
        "watch:test:copy:css": "chokidar \"playground/**/*.css\" -c \"npx cpy-cli \"playground/**/*.css\" pub --flat\"",
        "watch:test": "rollup -c rollup.config.playground.js -w",
        "dev": "concurrently \"npm run watch\" \"npm run watch:test\" \"npm run watch:test:copy:html\" \"npm run watch:test:copy:css\" \"nodemon server.js\"",
        "test": "npx web-test-runner --config web-test-runner.config.js"
    },
    "author": "Jeffrey Rodgers",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@fortawesome/fontawesome-svg-core": "^6.7.2",
        "@fortawesome/free-solid-svg-icons": "^6.7.2",
        "@open-wc/testing": "^3.0.0-next.5",
        "@rollup/plugin-replace": "^6.0.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@web/test-runner": "^0.20.0",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.1.2",
        "connect-livereload": "^0.6.1",
        "cpy-cli": "^5.0.0",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "express": "^4.21.2",
        "font-awesome": "^4.7.0",
        "globals": "^15.14.0",
        "livereload": "^0.9.3",
        "nodemon": "^3.1.9",
        "prettier": "3.4.2",
        "rollup": "^2.79.2",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "sinon": "^19.0.2"
    }
}
